<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="oval"  >
            <corners android:radius="5dip" />
            <stroke android:width="0.2dip" android:color="#D7371B" />
            <gradient android:angle="-90" android:startColor="#E23F29" android:endColor="#CB2F0D"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="oval"  >
            <corners android:radius="5dip" />
            <stroke android:width="0.2dip" android:color="#5e7974" />
            <solid android:color="#58857e"/>
        </shape>
    </item>
    <item >
        <shape android:shape="oval"  >
            <corners android:radius="5dip" />
            <stroke android:width="0.2dip" android:color="#BBBBBB" />

        </shape>
    </item>
</selector>